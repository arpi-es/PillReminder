<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mypillreminder.features.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addEditPillFragment"
            app:destination="@id/addEditPillFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditPillFragment"
        android:name="com.example.mypillreminder.features.addeditpill.AddEditPillFragment"
        android:label="AddEditPillFragment"
        tools:layout="@layout/fragment_add_edit_pill">
        <argument
            android:name="pillIdentifier"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_addEditPillFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>