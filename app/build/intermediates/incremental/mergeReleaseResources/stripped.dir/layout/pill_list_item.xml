    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        app:cardUseCompatPadding="true" android:tag="layout/pill_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:ignore="RtlCompat">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">


            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:src="@drawable/pill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tag="binding_1"                   />

            <TextView

                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:tag="binding_2"        
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgPoster"
                app:layout_constraintEnd_toStartOf="@+id/imgPoster"
                app:layout_constraintStart_toEndOf="@+id/textViewOptions"
                app:layout_constraintTop_toTopOf="@+id/imgPoster"
                tools:text="پنی سیلین" />


            <ImageView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_edit"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtTitle"
                app:layout_constraintVertical_bias="0"
                android:tag="binding_3"                                                     
                />

            <TextView
                android:id="@+id/txtInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:tag="binding_4"                               
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/pillAlarm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgPoster"
                tools:text="هر 8 ساعت" />

<!--            <ImageView-->
<!--                android:id="@+id/imageView"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:adjustViewBounds="true"-->
<!--                android:maxWidth="42dp"-->
<!--                android:maxHeight="42dp"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:layout_marginLeft="8dp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/txtInterval"-->
<!--                app:layout_constraintEnd_toStartOf="@+id/txtInterval"-->
<!--                app:layout_constraintHorizontal_bias="1.0"-->
<!--                app:layout_constraintHorizontal_chainStyle="packed"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="@+id/txtInterval"-->
<!--                app:srcCompat="@drawable/alarm_on" />-->


<!--            <com.google.android.material.checkbox.MaterialCheckBox-->
            <ImageView
                android:id="@+id/pillAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:scaleType="fitCenter"
                android:tag="binding_5"                     
                app:layout_constraintBottom_toBottomOf="@+id/txtInterval"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtInterval"
                android:src="@drawable/ic_notifications" />

            <TextView
                android:id="@+id/txtLastTaken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="6dp"
                android:tag="binding_6"                                                 
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtInterval"
                tools:text="آخرین مصرف : 12:30 99/01/01" />

            <TextView
                android:id="@+id/txtNextDose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="6dp"
                android:tag="binding_7"                                               
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLastTaken"
                tools:text="نوبت بعدی : 12:30 99/01/01" />

            <Button
                android:id="@+id/btnSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_8"                                                   
                android:text="رد نوبت"
                app:backgroundTint="@color/pink_1"
                app:layout_constraintBottom_toBottomOf="@+id/btnTake"
                app:layout_constraintEnd_toStartOf="@+id/btnTake"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnAlreadyTaken"
                app:layout_constraintTop_toTopOf="@+id/btnTake" />

            <Button
                android:id="@+id/btnAlreadyTaken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_9"                                                           
                android:text="ثبت نوبت قبلی"
                app:backgroundTint="@color/yellow_1"
                app:layout_constraintBottom_toBottomOf="@+id/btnSkip"
                app:layout_constraintEnd_toStartOf="@+id/btnSkip"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnSkip" />

            <Button
                android:id="@+id/btnTake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:tag="binding_10"                                                  
                android:text="مصرف"
                app:backgroundTint="@color/green_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnSkip"
                app:layout_constraintTop_toBottomOf="@+id/txtNextDose" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         


